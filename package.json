{
  "name": "powerful-backend",
  "version": "1.0.0",
  "description": "a backend application where user can sell food online",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "test": "jest --watch --runInBand",
    "start": "ts-node src/index.ts"
  },
  "keywords": [
    "backend"
  ],
  "author": "nikhil kumar",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^16.11.10",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "10.9.1",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.20",
    "winston": "^3.14.1"
  }
}
